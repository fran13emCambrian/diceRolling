<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".diceFragment">

    <TextView
        android:id="@+id/tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        android:text="ROLL YOUR DICE"
        android:textColor="#6E3CBC"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/tittle"
        tools:layout_editor_absoluteX="-27dp">

        <RadioButton
            android:id="@+id/side4Rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#6E3CBC"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="4 sided dice"
            tools:ignore="InvalidId" />

        <RadioButton
            android:id="@+id/side6Rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#6E3CBC"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="6 sided dice" />

        <RadioButton
            android:id="@+id/side8Rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#6E3CBC"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="8 sided dice"></RadioButton>

        <RadioButton
            android:id="@+id/side10Rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#6E3CBC"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="10 side dice"></RadioButton>

        <RadioButton
            android:id="@+id/side12Rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#6E3CBC"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="12 sided dice"></RadioButton>

        <RadioButton
            android:id="@+id/side20Rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#6E3CBC"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="20 sided dice"></RadioButton>
    </RadioGroup>

    <Button
        android:id="@+id/dice1Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:text="Roll dice One time"
        android:textStyle="bold"


        app:layout_constraintTop_toBottomOf="@+id/radioGroup"></Button>

    <Button
        android:id="@+id/dice2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:textStyle="bold"
        android:text="Roll dice second time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dice1Btn"></Button>

    <TextView
        android:id="@+id/resultTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#6E3CBC"
        android:textSize="25sp"
        android:layout_marginTop="620dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dice2Btn"/>

</FrameLayout>